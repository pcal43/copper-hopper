{
  "multipart": [
    {   "when": { "pcal_sorter": "1" , "facing": "down" },
      "apply": { "model": "block/hopper_item_sorter" }
    },
    {   "when": { "pcal_sorter": "0" , "facing": "down" },
      "apply": { "model": "block/hopper"}
    },
    {   "when": { "pcal_sorter": "1" , "facing": "north" },
      "apply": { "model": "block/hopper_side_item_sorter"}
    },
    {   "when": { "pcal_sorter": 0 , "facing": "north" },
      "apply": { "model": "block/hopper_side"}
    },
    {   "when": { "pcal_sorter": 1 , "facing": "south" },
      "apply": { "model": "block/hopper_side_item_sorter", "y": 180 }
    },
    {   "when": { "pcal_sorter": 0 , "facing": "south" },
      "apply": { "model": "block/hopper_side", "y": 180 }
    },
    {   "when": { "pcal_sorter": 1 , "facing": "west" },
      "apply": { "model": "block/hopper_side_item_sorter", "y": 270 }
    },
    {   "when": { "pcal_sorter": 0 , "facing": "west" },
      "apply": { "model": "block/hopper_side", "y": 270 }
    },
    {   "when": { "pcal_sorter": 1 , "facing": "east" },
      "apply": { "model": "block/hopper_side_item_sorter", "y": 90 }
    },
    {   "when": { "pcal_sorter": 0 , "facing": "east" },
      "apply": { "model": "block/hopper_side", "y": 90 }
    }
  ]
}